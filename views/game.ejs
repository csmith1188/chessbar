<!DOCTYPE html>
<html>

<head>
    <title>Chess</title>
    <link href="https://fonts.googleapis.com/css2?family=Lavishly+Yours&display=swap" rel="stylesheet">
    <style>
        #container {
            display: flex;
            align-items: flex-start;
            vertical-align: top;
        }

        #sidebar {
            display: flex;
            gap: 10px;
            margin-left: 10px;
        }

        .captureBox {
            border: 5px solid black;
            width: 75px;
            height: 590px;
            overflow-y: auto;
            max-height: 590px;
        }

        #InfoBox {
            border: 10px solid black;
            width: 175px;
            height: 100px;
            font-size: 90px;
            display: flex;
            justify-content: center;
            align-items: center;
            font-family: 'Lavishly Yours', cursive;
            font-weight: 400;
        }

        /* === Chat stuff === */
        #chat-container {
            display: flex;
            flex: 1;
            margin-top: 70px;
            height: calc(100vh - 70px);
            overflow: hidden;
        }

        /* Sidebar */
        #chat-sidebar {
            width: 250px;
            background: rgba(255, 255, 255, 0.07);
            border-right: 2px solid rgba(255, 255, 255, 0.1);
            padding: 20px;
            box-sizing: border-box;
        }

        #chat-sidebar h2 {
            font-size: 20px;
            margin-bottom: 15px;
        }

        /* Chat area */
        #chat-main {
            flex: 1;
            display: flex;
            flex-direction: column;
            padding: 15px;
            box-sizing: border-box;
        }

        /* Container for each message row */
        .message-row {
            display: flex;
            margin: 6px 0;
        }

        .message-row.you {
            justify-content: flex-end;
            /* push to right */
        }

        .message-row.other {
            justify-content: flex-start;
            /* push to left */
        }

        /* Chat bubble itself */
        .message {
            max-width: 65%;
            padding: 10px 14px;
            border-radius: 12px;
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.15);
            color: white;
            word-wrap: break-word;
        }

        /* Your messages (right side) */
        .message-row.you .message {
            background: linear-gradient(135deg, #4b00a5, #002a7a);
            border: 1px solid rgba(255, 255, 255, 0.2);
            text-align: right;
        }

        /* Other people's messages (left side) */
        .message-row.other .message {
            background: rgba(255, 255, 255, 0.08);
            text-align: left;
        }

        /* Chat input area */
        #inputBar {
            display: flex;
            border-radius: 12px;
            overflow: hidden;
            background: #0d2033;
            border: 1px solid #22394f;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.4);
        }

        #msg {
            flex: 1;
            padding: 12px;
            border: none;
            background: transparent;
            color: rgb(0, 0, 0);
            font-size: 16px;
            outline: none;
        }

        #send {
            background: #132b45;
            border: 1px solid #33577b;
            color: rgb(0, 0, 0);
            font-size: 16px;
            font-weight: 600;
            padding: 12px 20px;
            cursor: pointer;
            transition: background 0.2s, transform 0.1s;
        }

        #send:hover {
            background: linear-gradient(to right, #5e00ca, #00388f);
        }
    </style>
</head>

<body>
    <div id="container">
        <canvas id="canvas"></canvas>
        <div id="sidebar">
            <div id="CapturedW" class="captureBox"></div>
            <div id="CapturedB" class="captureBox"></div>
            <div id="InfoBox"></div>
        </div>
    </div>

    <!--div for chat and siht go here later-->
    <div id="messages"></div>
    <div id="chat-sidebar"></div>

    <input type="text" id="msg" placeholder="Type your message here..." />
    <button id="send">send</button>
    <a href="/">Back to game selection</a>
</body>

<!-- Socket.IO client (auto-served by your server) -->
<script src="/socket.io/socket.io.js"></script>

<script>
    const socket = io()
</script>

<script src="js/chat.js"></script>

<script src="js/settings.js"></script>

<script src="js/docEvents.js"></script>

<script src="js/clientBoard.js"></script>
<script src="js/main.js"></script>

<script>
    const joinCode = new URLSearchParams(window.location.search).get('code')
    console.log(joinCode)
    if (joinCode) {
        socket.emit('join', joinCode)
    }
</script>

<script>
    //for info box
    const InfoBox = document.getElementById("InfoBox");
    socket.on("updateBoard", (board) => {
        InfoBox.innerHTML = board.turn
        CapturedW.innerHTML = ""
        CapturedB.innerHTML = ""
    })
</script>

</html>