<!DOCTYPE html>
<html>

<head>
    <title>Chess</title>
    <link href="https://fonts.googleapis.com/css2?family=Lavishly+Yours&display=swap" rel="stylesheet">
    <style>
        /* === Layout === */
        body {
            margin: 0;
            background: #0d1117;
            color: white;
            font-family: Arial, sans-serif;
        }

        #container {
            display: flex;
            align-items: flex-start;
            vertical-align: top;
            padding: 10px;
        }

        #sidebar {
            display: flex;
            gap: 10px;
            margin-left: 10px;
        }

        .captureBox {
            border: 5px solid black;
            width: 75px;
            height: auto;
            overflow-y: auto;
            max-height: 100%;
            background: #111;
        }

        #InfoBox {
            border: 10px solid black;
            width: 175px;
            height: 100%;
            font-size: 90px;
            display: flex;
            justify-content: center;
            align-items: center;
            font-family: 'Lavishly Yours', cursive;
            font-weight: 400;
            background: #222;
        }

        /* === Chat Styles === */
        #chat-container {
            display: flex;
            flex-direction: row;
            flex: 1;
            height: 25vh;
            box-sizing: border-box;
        }

        /* Sidebar */
        #chat-sidebar {
            width: 250px;
            background: rgba(255, 255, 255, 0.07);
            border-right: 2px solid rgba(255, 255, 255, 0.1);
            padding: 20px;
            box-sizing: border-box;
            overflow-y: auto;
        }

        #chat-sidebar h2 {
            font-size: 20px;
            margin-bottom: 15px;
        }

        /* Chat main area */
        #chat-main {
            flex: 1;
            display: flex;
            flex-direction: column;
            padding: 15px;
            box-sizing: border-box;
            overflow: hidden;
        }

        #messages {
            flex: 1;
            overflow-y: auto;
            padding-right: 5px;
        }

        /* Container for each message row */
        .message-row {
            display: flex;
            margin: 6px 0;
        }

        .message-row.you {
            justify-content: flex-end;
        }

        .message-row.other {
            justify-content: flex-start;
        }

        /* Chat bubble */
        .message {
            max-width: 65%;
            padding: 10px 14px;
            border-radius: 12px;
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.15);
            color: white;
            word-wrap: break-word;
        }

        .message-row.you .message {
            background: linear-gradient(135deg, #4b00a5, #002a7a);
            border: 1px solid rgba(255, 255, 255, 0.2);
            text-align: right;
        }

        .message-row.other .message {
            background: rgba(255, 255, 255, 0.08);
            text-align: left;
        }

        /* Chat input bar */
        #inputBar {
            display: flex;
            border-radius: 12px;
            overflow: hidden;
            background: #0d2033;
            border: 1px solid #22394f;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.4);
        }

        #msg {
            flex: 1;
            padding: 12px;
            border: none;
            background: transparent;
            color: white;
            font-size: 16px;
            outline: none;
        }

        #send {
            background: #132b45;
            border: 1px solid #33577b;
            color: white;
            font-size: 16px;
            font-weight: 600;
            padding: 12px 20px;
            cursor: pointer;
            transition: background 0.2s, transform 0.1s;
        }

        #send:hover {
            background: linear-gradient(to right, #5e00ca, #00388f);
        }

        a {
            color: #78a6ff;
            text-decoration: none;
            display: inline-block;
            margin: 10px;
        }

        a:hover {
            text-decoration: underline;
        }
    </style>
</head>

<body>
    <div id="container">
        <canvas id="canvas"></canvas>
        <div id="sidebar">
            <div id="CapturedW" class="captureBox"></div>
            <div id="CapturedB" class="captureBox"></div>
            <div id="InfoBox"></div>
        </div>
    </div>

    <!-- === Chat Section === -->
    <div id="chat-container">
        <div id="chat-sidebar">
            <h2>Users</h2>
        </div>

        <div id="chat-main">
            <div id="messages"></div>

            <div id="inputBar">
                <input type="text" id="msg" placeholder="Type your message here..." />
                <button id="send">Send</button>
            </div>
        </div>
    </div>

    <a href="/">Back to game selection</a>

    <!-- Socket.IO client -->
    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();
    </script>

    <!-- Your game scripts -->
    <script src="js/chat.js"></script>
    <script src="js/settings.js"></script>
    <script src="js/docEvents.js"></script>
    <script src="js/clientBoard.js"></script>
    <script src="js/main.js"></script>

    <script>
        const joinCode = new URLSearchParams(window.location.search).get('code');
        if (joinCode) {
            socket.emit('join', joinCode);
        }

        const InfoBox = document.getElementById("InfoBox");
        socket.on("updateBoard", (board) => {
            InfoBox.innerHTML = board.turn;
            CapturedW.innerHTML = "";
            CapturedB.innerHTML = "";
        });
    </script>
</body>

</html>