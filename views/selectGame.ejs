<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chess</title>
    <link rel="stylesheet" href="/css/selectGame.css">
    <link rel="stylesheet" href="/css/newGame.css">
</head>

<body>
    <div id="newGameOverlay" class="overlay">
        <div class="overlay-content">
            <button class="closebtn" onclick="closeNav()">&times;</button>

            
            <div class="checkbox-group">
                <div class="checkbox-item">
                    <input type="checkbox" id="chatOn" name="chat" checked>
                    <label for="chatOn">Chat enabled</label>
                </div>
                <div class="checkbox-item">
                    <input type="checkbox" id="startWhite" name="white" checked>
                    <label for="startWhite">Start as white</label>
                </div>
            </div>

            <input type="text" class="input" id="gameName" placeholder="Enter Room Name...">

            <button id="newPublicGame" class="btn" onclick="newGame('public')">New Public Game</button>
            <button id="newPrivateGame" class="btn secondary" onclick="newGame('private')">New Private Game</button>
        </div>
    </div>

    <!-- <span onclick="openNav()">open</span> -->

    <div class="page-wrap">
        <header class="header">
            <div class="brand">
                <img src="/img/basic/white_rook.png" alt="logo">
                <h1>Chessbar â€” Select a Game</h1>
            </div>
            <div class="controls">
                <!-- <a class="small" href="/game">Open last game</a> -->
                <button id="newPublicGame" class="btn" onclick="openNav()">New Game</button>
                <!-- <button id="newPrivateGame" class="btn secondary" onclick="newGame('private')">New Private</button> -->
            </div>
        </header>

        <main class="main">
            <section class="panel" id="games">
                <h2>Available Games</h2>
                <ul id="gameList"></ul>
            </section>

            <aside class="sidebar">
                <div class="panel">
                    <label for="joinCodeInput" class="small">Join by code</label>
                    <input class="input" type="text" id="joinCodeInput" placeholder="Enter Join Code">
                    <div style="display:flex;gap:8px">
                        <button id="joinGameButton" class="btn" onclick="joinGame()">Join</button>
                        <button class="btn secondary" onclick="location.reload()">Refresh</button>
                    </div>
                    <div class="footer-note">Public games are visible to everyone. Private games require the join code.
                    </div>
                </div>
            </aside>
        </main>
    </div>
</body>
<script src="/socket.io/socket.io.js"></script>

<script src="js/gameList.js"></script>

<script>
    const joinCodeInput = document.getElementById('joinCodeInput');
    const gameName = document.getElementById('gameName')
    function newGame(visibility) {
        socket.emit('newGame', visibility, gameName.value.trim())
        closeNav()
    }

    function joinGame() {
        const code = joinCodeInput.value.trim();
        if (code) {
            window.location.href = `/game?code=${encodeURIComponent(code)}`;
        }
    }
</script>

<script>
    function openNav() {
        document.getElementById("newGameOverlay").classList.add("active");
    }

    function closeNav() {
        document.getElementById("newGameOverlay").classList.remove("active");
    }

</script>

</html>